
sudo docker build -t jenkins_docker .

docker run -it -v /var/run/docker.sock:/var/run/docker.sock -p 8081:8080 jenkins_docker


docker run -d -p 8082:8080 -v /var/run/docker.sock:/var/run/docker.sock --name dockerWithJenkins jenkins_docker



pipeline {
    agent any

    stages {
        stage('preparation') {
            steps {
                git 'https://github.com/mohabrabie/jenkins_nodejs_example'
            }
            
        }
            
        stage('build') {
            steps {
                sh 'docker build -f dockerfile . -t mohabrabie/jenkins_iti:v1.0'
            }
            
        }
        
        stage('artifact') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-hub', passwordVariable: 'pass', usernameVariable: 'user')]) {
                sh 'docker login --username=${user} --password=${pass}'
                sh 'docker push mohabrabie/jenkins_iti:v1.0'
                }
            }
        }
        
        stage('deploy') {
            steps {
                sh 'sudo docker run -d -p 3000:3000 -t mohabrabie/jenkins_iti:v1.0'
            }
            
        }
    }
}

